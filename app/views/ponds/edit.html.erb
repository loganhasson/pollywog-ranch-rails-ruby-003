<h1>Edit <%= @pond.name %></h1>
<%= form_for(@pond) do |f| %>
  <%= f.label :name, "Name" %>
  <%= f.text_field :name, placeholder: @pond.name %><br />
  <%= f.label :water_type, "Water Type" %>
  <%= f.text_field :water_type, placeholder: @pond.water_type %><br />
  <%= f.submit %>
<% end %>

<%= link_to "Cancel", ponds_path %>